{
  "manifest_version": 3,
  "name": "Chronicles of Black Myth",
  "version": "1.0",
  "description": "View Markdown files from GitHub in a structured menu",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://api.github.com/"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}